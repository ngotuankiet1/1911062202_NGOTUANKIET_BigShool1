@model IEnumerable<_1911062202_NGOTUANKIET_BigShool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
        <li>
            <div class="date">
                <div class="month">
                    @course.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @course.Datetime.ToString("dd")
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
            </div>
        </li>
        }
    </ul>
</div>