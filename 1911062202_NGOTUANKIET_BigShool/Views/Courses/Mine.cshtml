@model IEnumerable<_1911062202_NGOTUANKIET_BigShool.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @course.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span><br>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="">Edit</a>
                <a href="">Delete</a>
            </div>
        </li>
    }
</ul>

